            "program": "${workspaceRoot}/yak/build/src/yak",
            "args": [
                "-f",
                "../../benchmark/data/plop1.csv",
                "-f",
                "../../benchmark/data/plop2.csv",
                "-c",
                "1, 8",
                "-c",
                "5",
